{
  "name": "document-qa",
  "description": "Upload a document and ask questions about it",
  "has_file_uploads": true,
  "workflow": {
    "init_params": {
      "question": "What is this document about?"
    },
    "step_configs": {
      "read_doc": {
        "activity": "read_uploaded_file",
        "file_index": 0
      },
      "answer": {
        "activity": "litellm_chat",
        "model": "gpt-4o",
        "system_prompt": "You are a document analysis assistant. Answer questions based on the provided document content.",
        "user_prompt": "Document content:\n\n{{ read_doc.outputs.content }}\n\nQuestion: {{ init_params.question }}",
        "temperature": 0.3
      }
    },
    "steps": ["read_doc", "answer"]
  }
}
