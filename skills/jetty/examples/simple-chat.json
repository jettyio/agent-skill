{
  "name": "simple-chat",
  "description": "A simple workflow that takes a prompt and returns an LLM response",
  "workflow": {
    "init_params": {
      "prompt": "Hello, how are you?",
      "model": "gpt-4o-mini"
    },
    "step_configs": {
      "chat": {
        "activity": "litellm_chat",
        "model_path": "init_params.model",
        "system_prompt": "You are a helpful assistant.",
        "user_prompt_path": "init_params.prompt",
        "temperature": 0.7
      }
    },
    "steps": ["chat"]
  }
}
